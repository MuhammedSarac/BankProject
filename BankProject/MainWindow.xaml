<Window x:Class="BankProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="170"/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>


            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <!-- logo and button-->
        <Border Background="#134187" Grid.Column="0" Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35">
                    </RowDefinition>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0">
                    <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image Source="images/icon/piggy-bank.png" Height="24" Width="24"/>
                        <Label Content="Bank Dashboard" Foreground="#FF080808" FontWeight="Bold" VerticalAlignment="Center" HorizontalContentAlignment="Center" FontSize="16"/>
                    </DockPanel>
                </Border>

                <Border Grid.Row="1">
                    <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image>
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Source" Value="images/search.png"/>
                                    <Setter Property="Height" Value="auto"/>
                                    <Setter Property="Width" Value="100"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Width" Value="105"/>
                                        </Trigger>
                                    </Style.Triggers>

                                </Style>
                            </Image.Style>
                        </Image>

                    </DockPanel>
                </Border>
            </Grid>
        </Border>

        <!-- mini button and header-->
        <Border Background="#134187" Grid.Column="1" Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Background="White">
                    <DockPanel Width="72" HorizontalAlignment="Right">
                        <Button Content="__" Style="{DynamicResource minibuttons}"/>
                        <Button Content="X"  x:Name="btn_close" Click="btn_close_Click" Style="{DynamicResource minibuttons}"/>
                    </DockPanel>
                </Border>
            </Grid>

        </Border>

        <!-- side panel menu-->
        <Border Background="#134187" Grid.Column="0" Grid.Row="1">
            <StackPanel>
                <Button Height="50" Style="{DynamicResource menubuttons}">
                    <DockPanel Height="50">
                        <Image Source="images/user.png" Height="50" Width="50" HorizontalAlignment="Left"/>
                        <Label Content="Opret Kunde" Foreground="Black"  FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    </DockPanel>
                </Button>
                <Button Height="50" Style="{DynamicResource menubuttons}">
                    <DockPanel Height="50">
                        <Image Source="images/file.png" Height="50" Width="50" HorizontalAlignment="Left"/>
                        <Label Content="Opret Konto" Foreground="Black"  FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    </DockPanel>
                </Button>
                <Button Height="50" Style="{DynamicResource menubuttons}">
                    <DockPanel Height="50">
                        <Image Source="images/searchkonto.png" Height="50" Width="50" HorizontalAlignment="Left"/>
                        <Label Content="Søg Kunde" Foreground="Black"  FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    </DockPanel>
                </Button>
                <Button Height="50" Style="{DynamicResource menubuttons}">
                    <DockPanel Height="50">
                        <Image Source="images/moneyadd.png" Height="50" Width="50" HorizontalAlignment="Left"/>
                        <Label Content="Indsæt penge" Foreground="Black"  FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    </DockPanel>
                </Button>
                <Button Height="50" Style="{DynamicResource menubuttons}">
                    <DockPanel Height="50">
                        <Image Source="images/moneyrec.png" Height="50" Width="50" HorizontalAlignment="Left"/>
                        <Label Content="Udbetal penge" Foreground="Black"  FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    </DockPanel>
                </Button>
                <Button Height="50" Style="{DynamicResource menubuttons}">
                    <DockPanel Height="50">
                        <Image Source="images/delete.png" Height="50" Width="50" HorizontalAlignment="Left"/>
                        <Label Content="Slette Kunde" Foreground="Black"  FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    </DockPanel>
                </Button>
                <Button Height="50" Style="{DynamicResource menubuttons}">
                    <DockPanel Height="50">
                        <Image Source="images/delete.png" Height="50" Width="50" HorizontalAlignment="Left"/>
                        <Label Content="Slette Konto" Foreground="Black"  FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    </DockPanel>
                </Button>
            </StackPanel>
            
            

        </Border>

    </Grid>
</Window>
