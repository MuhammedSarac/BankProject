<Window x:Class="BankProject.deletekunde"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankProject"
        mc:Ignorable="d"
        Title="deletekunde" Height="450" Width="800" Background="{x:Null}" AllowsTransparency="True" WindowStyle="None">
    <Grid>
      
        <Canvas Margin="0,0,10,0" Grid.ColumnSpan="2">
            <Rectangle x:Name="header_deletekunde" Height="38" Width="408" Canvas.Left="246" Canvas.Top="31" Fill="#FF134187" Panel.ZIndex="1" MouseDown="header_deletekunde_MouseDown"/>
            <Label Content="Slet Kunde" Canvas.Left="389" Canvas.Top="31" Panel.ZIndex="2" Width="116" FontSize="16"/>
            <Border Height="333" Width="408" Canvas.Left="246" Canvas.Top="31" Background="#FFF3EEEE">
                <Border.Effect>
                    <DropShadowEffect/>
                </Border.Effect>
            </Border>
            <Label Content="Kundecpr : " Height="27" Width="66" Canvas.Left="263" Canvas.Top="83"/>
            <TextBox Width="163" RenderTransformOrigin="0.441,0.485" Canvas.Left="342" Canvas.Top="83" Height="21" x:Name="txt_kundecpr"/>
          


            <Button Content="Slet" Canvas.Left="428" Canvas.Top="124" Width="77" x:Name="slet_opret" Click="slet_opret_Click" ></Button>

            <Button Content="X"  x:Name="deltekunde_close" Click="deltekunde_close_Click" FontSize="12"  Canvas.Left="619" Canvas.Top="40" Panel.ZIndex="3" Width="22"/>

        </Canvas>

    </Grid>
</Window>
